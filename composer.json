{
  "name": "tomedio/pdf-watermark",
  "description": "A PHP library for adding text and image watermarks to PDF files using Ghostscript",
  "type": "library",
  "require": {
    "php": "^8.1",
    "symfony/process": "^6.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.0",
    "squizlabs/php_codesniffer": "^3.7"
  },
  "authors": [
    {
      "name": "Tomasz Bajorek <tomasz.bajorek@tomedio.com>"
    }
  ],
  "autoload": {
    "psr-4": {
      "PdfWatermark\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "PdfWatermark\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit",
    "cs": "phpcs"
  },
  "license": "MIT"
}
